<aura:component description="campingList" controller="CampingListController">
  <aura:attribute name="items" type="Camping_Item__c[]"/>
  <aura:attribute name="newItem" type="Camping_Item__c" default="{
                        'sobjectType': 'Camping_Item__c',
                        'Name':'',
                        'Quantity__c': 0,
                        'Price__c': 0,
                        'Packed__c': false}"/>
  <aura:handler name="init" action="{!c.doInit}" value="{!this}"/>

  <lightning:layout>
    <lightning:layoutItem padding="around-small" size="6">
      <!-- CREATE NEW campItem -->
      <div aria-labelledby="newcampitemform">
        <!-- BOXED AREA -->
        <fieldset class="slds-box slds-theme_default slds-container_small">
          <legend id="newcampitemform" class="slds-text-heading_small
          slds-p-vertical_medium">
            Add Camping Item
          </legend>
          <!-- CREATE NEW CAMPINGITEM FORM -->
          <form class="slds-form_stacked">
            <lightning:input aura:id="campingItemForm" label="Camping Item Name"
                             name="name"
                             value="{!v.newItem.Name}"
                             required="true"/>
            <lightning:input aura:id="campingItemForm" label="Quantity" type="number"
                             name="quantity"
                             min="1"
                             step="1"
                             value="{!v.newItem.Quantity__c}"
                             messageWhenRangeUnderflow="Enter quantity that's at least 1."/>
            <lightning:input aura:id="campingItemForm" label="Price" type="number"
                             name="price"
                             formatter="currency"
                             value="{!v.newItem.Price__c}"/>
            <lightning:input aura:id="campingItemForm" label="Packed?" type="checkbox"
                             name="packed"
                             checked="{!v.newItem.Packed__c}"/>
            <lightning:button label="Create Expense"
                              class="slds-m-top_medium"
                              variant="brand"
                              onclick="{!c.clickCreateItem}"/>
          </form>
          <!-- / CREATE NEW EXPENSE FORM -->
        </fieldset>
        <!-- / BOXED AREA -->
      </div>
      <!-- / CREATE NEW EXPENSE -->

    </lightning:layoutItem>
  </lightning:layout>

  <lightning:card title="Items">
    <p class="slds-p-horizontal_small">
      <aura:iteration items="{!v.items}" var="item">
        <c:campingListItem item="{!item}"/>
      </aura:iteration>
    </p>
  </lightning:card>

</aura:component>
